{% extends 'layouts/head.twig' %}

{% block content %}

    <section class="content-header">
        <h1>
            <i class="fa fa-user"></i> Data User
            <small>Data-data pengguna terdaftar</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Pasar</a></li>
            <li class="active">List Pasar</li>
        </ol>
    </section>
    {#{{ dump(listLapak) }}#}
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">

                <div class="box">
                    <div class="box-header">
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th>No.</th>
                                <th>Email</th>
                                <th>Username</th>
                                <th>Telp</th>
                                <th>Nama Lengkap</th>
                                <th>Alamat</th>
                                <th>Akses</th>
                                <th>Lapak ID</th>
                                <th>Deskripsi</th>
                                <th>Last Update</th>
                            </tr>
                            </thead>

                            <tbody>
                            {% set i = 1 %}
                            {% for list in infoUser %}

                            <tr>
                                <th>{{ i }}</th>
                                <th>{{ list.email }}</th>
                                <th>{{ list.username }}</th>
                                <th>{{ list.telp }}</th>
                                <th>{{ list.namaLengkap }}</th>
                                <th>{{ list.alamat }}</th>
                                {% if (list.akses == 0) %}
                                    <th>
                                        SuperAdmin
                                    </th>
                                {% elseif (list.akses == 1) %}
                                    <th>
                                        Admin
                                    </th>
                                {% else %}
                                    <th>
                                        Pelapak
                                    </th>
                                {% endif %}
                                <th>{{ list.lapakId }}</th>
                                <th>{{ list.deskripsi }}</th>
                                <th>{{ list.updatedAt|date('d M Y')}}</th>

                            </tr>
                            </tbody>
                            {% set i = i + 1 %}
                            {% endfor %}
                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div><!-- /.col -->
        </div><!-- /.row -->
    </section><!-- /.content -->
{% endblock %}