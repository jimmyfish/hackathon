{% extends 'layouts/head.twig' %}

{% block content %}

    <section class="content-header">
        <h1>
            Data Pelapak
            <small>Data-data pelapak terdaftar</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Lapak</a></li>
            <li class="active">List Lapak</li>
        </ol>
    </section>
    {#{{ dump(listLapak) }}#}
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">

                <div class="box">
                    <div class="box-header">
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th>No.</th>
                                <th>Kode Lapak</th>
                                <th>Nama Lapak</th>
                                <th>Deskripsi</th>
                                <th>ID Pasar</th>
                                <th>Updated At</th>
                                <th>Action</th>
                            </tr>
                            </thead>

                            <tbody>
                            {% set i = 1 %}
                            {% for list in listLapak %}

                            <tr>
                                <th>{{ i }}</th>
                                <th>{{ list.kodeLapak }}</th>
                                <th>{{ list.namaLapak }}</th>
                                <th>{{ list.deskripsi }}</th>
                                <th>{{ list.pasarId }}</th>
                                <th>{{ list.updatedAt|date('d M Y')}}</th>
                                <th>
                                    <a href="/detailProduk?id={{ list.kodeLapak }}" class="btn btn-primary" style="width: 100%"><i class="fa fa-info"></i>&nbsp; Detail</a>
                                </th>
                            </tr>
                            </tbody>
                            {% set i = i + 1 %}
                            {% endfor %}
                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div><!-- /.col -->
        </div><!-- /.row -->
    </section><!-- /.content -->
{% endblock %}