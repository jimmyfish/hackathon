{% extends 'layouts/head.twig' %}

{% block content %}

    <section class="content-header">
        <h1>
            <i class="fa fa-balance-scale"></i> Data Pasar
            <small>Data-data pasar terdaftar</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Pasar</a></li>
            <li class="active">List Pasar</li>
        </ol>
    </section>
    {#{{ dump(listLapak) }}#}
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">

                <div class="box">
                    <div class="box-header">
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th>No.</th>
                                <th>Kode Pasar</th>
                                <th>Nama Pasar</th>
                                <th>Latitude A</th>
                                <th>Latitude B</th>
                                <th>Longitude A</th>
                                <th>Longitude B</th>
                                <th>Last Update</th>
                            </tr>
                            </thead>

                            <tbody>
                            {% set i = 1 %}
                            {% for list in infoPasar %}

                            <tr>
                                <th>{{ i }}</th>
                                <th>{{ list.kodePasar }}</th>
                                <th>{{ list.namaPasar }}</th>
                                <th>{{ list.latitudeA }}</th>
                                <th>{{ list.latitudeB }}</th>
                                <th>{{ list.longitudeA }}</th>
                                <th>{{ list.longitudeB }}</th>
                                <th>{{ list.updatedAt|date('d M Y')}}</th>

                            </tr>
                            </tbody>
                            {% set i = i + 1 %}
                            {% endfor %}
                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div><!-- /.col -->
        </div><!-- /.row -->
    </section><!-- /.content -->
{% endblock %}