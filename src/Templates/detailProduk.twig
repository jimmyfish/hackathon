{% extends 'layouts/head.twig' %}

{% block content %}

    <section class="content-header">
        <h1>
            Data Produk
            {% for name in lapakName %}
                <small>{{ name.namaLapak }}</small>
            {% endfor %}
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Merk (Branding)</a></li>
            <li class="active">List Merk</li>
        </ol>
    </section>
    {#{{ dump(lapakName) }}#}
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">

                <div class="box">
                    <div class="box-header">
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th>No.</th>
                                <th>Kode</th>
                                <th>Nama Produk</th>
                                <th>Merk ID</th>
                                <th>Harga (Rp.)</th>
                                <th>Quantity</th>
                                <th>Satuan</th>
                                <th>Deskripsi</th>
                                <th>Updated At</th>
                            </tr>
                            </thead>

                            <tbody>
                            {% set i = 1 %}
                            {% for list in listProduk %}

                            <tr>
                                <th>{{ i }}</th>
                                <th>{{ list.kode }}</th>
                                <th>{{ list.namaProduk }}</th>
                                <th>{{ list.merkId }}</th>
                                <th>{{ list.harga }}</th>
                                <th>{{ list.qty }}</th>
                                <th>{{ list.satuan }}</th>
                                <th>{{ list.deskripsi }}</th>
                                <th>{{ list.updatedAt|date('d M Y')}}</th>
                            </tr>
                            </tbody>
                            {% set i = i + 1 %}
                            {% endfor %}
                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div><!-- /.col -->
        </div><!-- /.row -->
    </section><!-- /.content -->
{% endblock %}